<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item
      android:state_focused="true">
    <set>
      <objectAnimator
          android:duration="@integer/short_animation_time"
          android:propertyName="scaleX"
          android:valueTo="1.4"
          android:valueType="floatType"/>
      <objectAnimator
          android:duration="@integer/short_animation_time"
          android:propertyName="scaleY"
          android:valueTo="1.4"
          android:valueType="floatType"/>
    </set>
  </item>

  <item>
    <set>
      <objectAnimator
          android:duration="@integer/short_animation_time"
          android:propertyName="scaleX"
          android:valueTo="1"
          android:valueType="floatType"/>
      <objectAnimator
          android:duration="@integer/short_animation_time"
          android:propertyName="scaleY"
          android:valueTo="1"
          android:valueType="floatType"/>
    </set>
  </item>
</selector>